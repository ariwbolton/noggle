{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "./dist"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "explicit"
  }
}
